<div class="page-centered">
  <div class="card shadow">
  <h2 class="text-center mt-4 mb-4">Login</h2>
    <%= form_for(:session, html: {class: "form"}, url: login_path) do |f| %>
      <div class="form-group p-3">
          <%= f.text_field :username, placeholder: "Username", class: "form-control form-input" %>
      </div>
      <div class="form-group p-3">
          <%= f.password_field :password, placeholder: "Password", class: "form-control form-input" %>
      </div>
      <%= f.button "Login", class: "form-submit" %>
      </br>
      <h6 class="login-h6 text-center mb-4">New user? Signup</h6>
    <% end %>
  </div>
</div>