<div class="container mt-5 mb-5">
  
  <div class="row mb-5">
    
    <div class="col">
      <h1 class="display-6">Welcome to MessageMe</h1>
      <h1 class="lead text-muted">Get right to chatting below, no fuss!</h1>
    </div>
  
  </div>
  
  <div class="row">
    
    <div class="col-3">
      <ul class="list-group shadow">
        <li class="list-group-item">
          <strong>Users</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Sapana
          <span class="badge bg-success rounded-pill">Online</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Venkat
          <span class="badge bg-success rounded-pill">Online</span>
        </li>
      </ul>
    </div>

    <div class="col-9">
      <div class="card shadow" style="height: 30rem;">
        <div class="card-header">
          Activity
        </div>
        <div class="card-body">
        <% @messages.each do |message| %>
          <div class="text mb-1">
            <a class="fst-italic text-decoration-none"><%= message.user.username %>:</a>
            <%= message.body %>
          </div>
        <% end %>
        </div>
        <div class="card-footer">
          <div class="input-group mb-2 mt-2">
            <span class="input-group-text" id="inputGroup-sizing-default">Reply</span>
            <input type="text" placeholder="Enter your message" class="form-control" aria-label="message input">
          </div>
        </div>
      </div>
    </div>
  
  </div>

</div>